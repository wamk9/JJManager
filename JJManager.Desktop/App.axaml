<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="using:JJManager.Desktop.Converters"
			 xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             x:Class="JJManager.Desktop.App"
             RequestedThemeVariant="Dark">
    <Application.Styles>
        <!-- Fluent Theme as base -->
        <FluentTheme />
        <!-- Material Icons -->
        <materialIcons:MaterialIconStyles />
    </Application.Styles>

    <Application.Resources>
        <ResourceDictionary>

			<!-- Converters -->
			<local:InverseBoolConverter x:Key="InverseBool"/>

			<!-- Avalonia FluentTheme System Accent Colors (will be updated by ThemeService) -->
			<Color x:Key="SystemAccentColor">#6200EE</Color>
			<Color x:Key="SystemAccentColorLight1">#7C4DFF</Color>
			<Color x:Key="SystemAccentColorLight2">#9E7AFF</Color>
			<Color x:Key="SystemAccentColorLight3">#BFA6FF</Color>
			<Color x:Key="SystemAccentColorDark1">#5000C0</Color>
			<Color x:Key="SystemAccentColorDark2">#3D0091</Color>
			<Color x:Key="SystemAccentColorDark3">#2A0062</Color>

			<!-- Themes -->
			<ResourceDictionary.ThemeDictionaries>
                <!-- Dark Theme Colors -->
                <ResourceDictionary x:Key="Dark">
                    <Color x:Key="AppBackgroundColor">#1E1E1E</Color>
                    <Color x:Key="CardBackgroundColor">#2D2D2D</Color>
                    <Color x:Key="CardBackgroundAltColor">#252525</Color>
                    <Color x:Key="BorderColor">#444444</Color>
                    <Color x:Key="BorderAltColor">#333333</Color>
                    <Color x:Key="AccentColor">#6200EE</Color>
                    <Color x:Key="AccentHoverColor">#7C4DFF</Color>
                    <Color x:Key="AccentPressedColor">#5000C0</Color>
                    <Color x:Key="SuccessColor">#4CAF50</Color>
                    <Color x:Key="NeutralColor">#757575</Color>
                    <Color x:Key="TextSecondaryColor">#AAFFFFFF</Color>
                    <Color x:Key="OverlayColor">#1A000000</Color>
                    <SolidColorBrush x:Key="AppBackgroundBrush" Color="#1E1E1E"/>
                    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#2D2D2D"/>
                    <SolidColorBrush x:Key="CardBackgroundAltBrush" Color="#252525"/>
                    <SolidColorBrush x:Key="BorderBrush" Color="#444444"/>
                    <SolidColorBrush x:Key="BorderAltBrush" Color="#333333"/>
                    <SolidColorBrush x:Key="AccentBrush" Color="#6200EE"/>
                    <SolidColorBrush x:Key="AccentHoverBrush" Color="#7C4DFF"/>
                    <SolidColorBrush x:Key="AccentPressedBrush" Color="#5000C0"/>
                    <SolidColorBrush x:Key="SuccessBrush" Color="#4CAF50"/>
                    <SolidColorBrush x:Key="NeutralBrush" Color="#757575"/>
                    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#AAFFFFFF"/>
                    <SolidColorBrush x:Key="OverlayBrush" Color="#1A000000"/>
                </ResourceDictionary>
                <!-- Light Theme Colors -->
                <ResourceDictionary x:Key="Light">
                    <Color x:Key="AppBackgroundColor">#F5F5F5</Color>
                    <Color x:Key="CardBackgroundColor">#FFFFFF</Color>
                    <Color x:Key="CardBackgroundAltColor">#FAFAFA</Color>
                    <Color x:Key="BorderColor">#E0E0E0</Color>
                    <Color x:Key="BorderAltColor">#EEEEEE</Color>
                    <Color x:Key="AccentColor">#6200EE</Color>
                    <Color x:Key="AccentHoverColor">#7C4DFF</Color>
                    <Color x:Key="AccentPressedColor">#5000C0</Color>
                    <Color x:Key="SuccessColor">#2E7D32</Color>
                    <Color x:Key="NeutralColor">#9E9E9E</Color>
                    <Color x:Key="TextSecondaryColor">#99000000</Color>
                    <Color x:Key="OverlayColor">#1A000000</Color>
                    <SolidColorBrush x:Key="AppBackgroundBrush" Color="#F5F5F5"/>
                    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#FFFFFF"/>
                    <SolidColorBrush x:Key="CardBackgroundAltBrush" Color="#FAFAFA"/>
                    <SolidColorBrush x:Key="BorderBrush" Color="#E0E0E0"/>
                    <SolidColorBrush x:Key="BorderAltBrush" Color="#EEEEEE"/>
                    <SolidColorBrush x:Key="AccentBrush" Color="#6200EE"/>
                    <SolidColorBrush x:Key="AccentHoverBrush" Color="#7C4DFF"/>
                    <SolidColorBrush x:Key="AccentPressedBrush" Color="#5000C0"/>
                    <SolidColorBrush x:Key="SuccessBrush" Color="#2E7D32"/>
                    <SolidColorBrush x:Key="NeutralBrush" Color="#9E9E9E"/>
                    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#99000000"/>
                    <SolidColorBrush x:Key="OverlayBrush" Color="#1A000000"/>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
